{
  "manifest_version": 3,
  "name": "Music Party",
  "version": "1.0.0",
  "description": "Sincroniza YouTube Music con amigos",
  "action": {
  "default_popup": "index.html",
  "default_icon": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "offscreen", 
    "storage", 
    "scripting", 
    "tabs", 
    "activeTab"
  ],
  "host_permissions": [
    "https://music.youtube.com/*", 
    "http://localhost:8080/*", 
    "ws://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content-script.js", "assets/icons/*"],
      "matches": ["https://music.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "musicparty@rebenew.com",
      "strict_min_version": "109.0"
    }
  }
}
